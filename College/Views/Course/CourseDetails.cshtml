@model College.Models.Course
@{
    ViewBag.Title = "CourseDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h1>@Model.Name</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h3>Department : @Model.Department.Name</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h5>Description</h5>
    </div>
    <div class="col-md-12">
        <p>@Html.Raw(Model.Description)</p>
    </div>
</div>

