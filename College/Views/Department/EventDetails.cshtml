@model College.Models.Event
@{
    ViewBag.Title = "EventDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h1>@Model.Name</h1>
    </div>
    <div class="col-md-6 text-right">
        <h1>
            @Html.ActionLink("Edit", "EditEvent", "Department", new {id = Model.Id}, new {@class = "btn btn-primary"})
            @Html.ActionLink("Delete", "DeleteEvent", "Department", new {id = Model.Id}, new { onclick = "return confirm('Are you sure?');", @class = "btn btn-danger" })
        </h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p>@Html.Raw(Model.Description)</p>
    </div>
</div>
