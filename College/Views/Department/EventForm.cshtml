@model College.Models.Event
@{
    ViewBag.Title = "EventForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h1>New Event</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("SaveEvent", "Department"))
        {
            <div class="form-group">
                @Html.LabelFor(d => d.Name)
                @Html.TextBoxFor(d => d.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(d => d.Description)
                @Html.TextAreaFor(d => d.Description, new { @class = "form-control", id="description" })
                @Html.ValidationMessageFor(d => d.Description)
            </div>
            @Html.HiddenFor(d => d.Id)
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary">Submit</button>
        }
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        CKEDITOR.replace("description");
    </script>
}
